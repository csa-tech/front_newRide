<!--index.wxml-->

<view class="margin">
<view style="margin-top: 40px;">日期</view>
<view class="margin1" >
<!--<view class="fl_form"> -->
<picker mode="date" value="{{date}}" start="{{date}}" end="2020-01-01" bindchange="bindDateChange">
<view class="picker">
<text>选择日期</text> <text class="chosedate">{{date}}</text>
</view>
</picker>
</view>
